        <div class="flex gap-1 sm:gap-2 mt-2 sm:mt-0">
            <a href="{{ route('setLocale', {'locale': 'ru'}) }}" class="text-white/70 hover:text-white transition-colors text-sm sm:text-base px-2 py-1">РУС</a>
            <span class="text-white/50">|</span>
            <a href="{{ route('setLocale', {'locale': 'en'}) }}" class="text-white/70 hover:text-white transition-colors text-sm sm:text-base px-2 py-1">ENG</a>
